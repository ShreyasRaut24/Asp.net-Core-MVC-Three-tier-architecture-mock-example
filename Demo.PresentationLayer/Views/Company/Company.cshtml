@model List<Demo.BusinessLayer.Model.Company>
<h2>Company List</h2>

<div>
	<a asp-controller="Company" asp-action="Create"  class="btn btn-primary">Create Company</a>
</div>

<div>
	<table class="table">
		<tr>
			<th>CompanyId</th>
			<th>Company Name</th>
			<th>Company Address</th>
			<th>Action</th>
		</tr>
		@foreach(var company in Model)
		{
			<tr>
				<td>@company.Id</td>
				<td>@company.CompanyName</td>
				<td>@company.Address</td>

				<td>
					<a asp-controller="Company" asp-action="View">View </a> |
					<a asp-controller="Company" asp-action="Edit">Edit </a> |
					<a asp-controller="Company" asp-action="Delete">Delete </a> 
				</td>
			</tr>
		}
		
	</table>
</div>

